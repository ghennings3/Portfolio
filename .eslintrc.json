{
  "extends": ["next/core-web-vitals", "@rocketseat/eslint-config/react"],
  "rules": {
    "camelcase": "off",
    "no-unused-vars": "off",
    "no-undef": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "printWidth": 80,
        "trailingComma": "es5",
        "semi": false,
        "doubleQuote": true,
        "jsxSingleQuote": true,
        "singleQuote": false,
        "useTabs": false,
        "tabWidth": 4
      }
    ]
  }
}
